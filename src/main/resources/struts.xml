<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- 配置为开发模式 -->
	<constant name="struts.devMode" value="true" />

	<!-- 把扩展名配置为action -->
	<constant name="struts.action.extension" value="action" />

	<!-- 把主题配置为simple -->
	<constant name="struts.ui.theme" value="simple" />

	<!-- 配置action相关配置 -->
	<package name="default" namespace="/" extends="struts-default">


		<!-- 配置测试用的Action，未与Spring整合，class属性写类的全名 -->
		<!-- 当Struts2与Spring整合后，class属性可以写bean的名称 -->
		<action name="test" class="testAction">
			<result name="success">/test.jsp</result>
		</action>

		<!-- 实体类设置 -->
		<action name="role_*" class="roleAction" method="{1}">
			<result name="list">/WEB-INF/jsp/roleAction/list.jsp</result>

			<!-- 由于JSP页面是不对外呈现的，所以重定向到执行的action处理 重定向名称使用action_方法名即可 -->
			<result name="toList" type="redirectAction">role_list</result>

			<!-- 内部转交给JSP页面处理 -->
			<result name="saveUI" type="dispatcher">/WEB-INF/jsp/roleAction/saveUI.jsp</result>
			
			<result name="privilegeUI" type="dispatcher">/WEB-INF/jsp/roleAction/privilegeUI.jsp</result>

		</action>


		<action name="department_*" class="departmentAction" method="{1}">
			<result name="list">/WEB-INF/jsp/departmentAction/list.jsp</result>

			<!-- 由于JSP页面是不对外呈现的，所以重定向到执行的action处理 重定向名称使用action_方法名即可 -->
			<result name="toList" type="redirectAction">department_list</result>

			<!-- 内部转交给JSP页面处理 -->
			<result name="saveUI" type="dispatcher">/WEB-INF/jsp/departmentAction/saveUI.jsp
			</result>
		</action>


		<action name="user_*" class="userAction" method="{1}">
			<result name="list">/WEB-INF/jsp/userAction/list.jsp</result>

			<!-- 由于JSP页面是不对外呈现的，所以重定向到执行的action处理 重定向名称使用action_方法名即可 -->
			<result name="toList" type="redirectAction">user_list</result>

			<!-- 内部转交给JSP页面处理 -->
			<result name="saveUI" type="dispatcher">/WEB-INF/jsp/userAction/saveUI.jsp
			</result>
			
			<result name="loginUI" type="dispatcher">/WEB-INF/jsp/userAction/loginUI.jsp</result>
			<result name="index" type="redirectAction">home_index.action</result>
			<result name="logout" type="dispatcher">/WEB-INF/jsp/userAction/logout.jsp</result>
		</action>
		
		<action name="home_*" class="homeAction" method="{1}">
			<result name="index">/WEB-INF/jsp/homeAction/index.jsp</result>
			<result name="top">/WEB-INF/jsp/homeAction/top.jsp</result>
			<result name="bottom">/WEB-INF/jsp/homeAction/bottom.jsp</result>
			<result name="left">/WEB-INF/jsp/homeAction/left.jsp</result>
			<result name="right">/WEB-INF/jsp/homeAction/right.jsp</result>
		</action>

	</package>




</struts>
